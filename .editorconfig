# EditorConfig - Configuração de editor para consistência de código
# https://editorconfig.org

root = true

# Configurações padrão para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 100

# Arquivos Rust
[*.rs]
indent_size = 4
max_line_length = 100
# Permitir que o editor respeite tabulação para alinhamento dentro de expressões
continuation_indent_size = 4

# Arquivos TOML
[*.toml]
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 120

# Arquivos Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 120
# Markdown geralmente usa 2 espaços para listas e subitens
indent_size = 2

# Arquivos YAML
[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 120

# Arquivos JSON
[*.json]
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 120

# Makefiles
[Makefile]
indent_style = tab
trim_trailing_whitespace = false

# Scripts shell
[*.sh]
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 120
